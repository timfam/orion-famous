template(name='menuLogo')
  p: i.fa.fa-area-chart

template(name='ftHeader')
  .navbar
    .navbar-header
      .navbar-header
        a.menu-toggle.navbar-brand
          i.fa.fa-bars
    .navbar-collapse.collapse.navbar-responsive-collapse
      ul.nav.navbar-nav.navbar-right
template(name='ftSmallContentOffset')
  .row
    .col-sm-8.col-sm-offset-2
      +yield 
template(name='ftMediumContentOffset')
  .row
    .col-sm-10.col-sm-offset-1
      +yield 
template(name='ftContentContainer')
  .well
    +yield 
template(name='ftTitle')
  h1.title
    +yield 
  hr
//- login template
template(name='ftLogin')
  +Modifier proportions='[0.8, 1]' align='[.5, 0]' origin='[.5,0]'
    +atForm 
template(name='footer')
  div.container
    <hr>
    p.text-muted
      a(href='http://github.com/orionjs/orion') Famous Theme for Orion
      |  by 
      a(href='http://github.com/nicolaslopezj') TimFam
    nav.navbar-nav.navbar-right
      +atNavButton
