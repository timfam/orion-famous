template(name='ftLayout')
  +famousContext id='mainCtx'
    // This add the sidemenu for mobile or xsmall screen
    +sideMenu
    +StateModifier align='[.5,.5]' origin='[.5,.5]' size=main
      +HeaderFooterLayout headerSize='120' footerSize='80' direction= '1'
        +StateModifier align='[.5,.5]' origin='[.5,.5]' target='header' translate='[0, 0, 100]'
            +menu
        //- +Surface target='header' size='[undefined,undefined]' translate='[0,0,100]'
          +nav
        +RenderController target='content'
          if dictionaryReady
            +yield
        +Surface target='footer' size='[undefined,undefined]' translate='[0,0,100]'
          +footer
